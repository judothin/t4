@page
@model TroubleTickets.Pages.AddTicketModel
@{
    ViewData["Title"] = "Add Ticket";
}

<h1>AddTicket</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="tTicket.Ticket_Title"></label>
        <input asp-for="tTicket.Ticket_Title" class="form-control" placeholder="Brief descriptive title" />
        <span asp-validation-for="tTicket.Ticket_Title" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="tTicket.Ticket_Desc"></label>
        <input asp-for="tTicket.Ticket_Desc" class="form-control" placeholder="Description of problem/s" />
        <span asp-validation-for="tTicket.Ticket_Desc" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="tTicket.Category"></label>
        <input asp-for="tTicket.Category" class="form-control" placeholder="Category" />
        <span asp-validation-for="tTicket.Category" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="tTicket.Reporting_Email"></label>
        <input asp-for="tTicket.Reporting_Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="tTicket.Reporting_Email" class="text-danger"></span>
    </div>


    <button type="submit">Submit</button>

</form>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

@{
    if (Model.tTicket is null == false)
    {
        <h1>Results</h1>
        <p>@Model.tTicket.Ticket_Title</p>
        <p>@Model.tTicket.Reporting_Email</p>
    }
}
