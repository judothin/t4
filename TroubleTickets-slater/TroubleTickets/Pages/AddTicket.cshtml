@page
@model TroubleTickets.Pages.AddTicketModel
@{
    ViewData["title"] = "Add Ticket";
}


<h1>Add Ticket</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="troubleTicket.Item"></label>
        <input type="text" asp-for="troubleTicket.Item" class="form-control" placeholder="Fried Octopus..." />
        <span asp-validation-for="troubleTicket.Item" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="troubleTicket.Ingrediants"></label>
        <input type="text" asp-for="troubleTicket.Ingrediants" class="form-control" placeholder="Pasts, Sauce, Butter, etc..." />
        <span asp-validation-for="troubleTicket.Ingrediants" class="text-danger"></span>
    </div>
    <button type="submit">Add</button>
</form>

<script src="/lib/jqyery/dist/jquery.min.js"></script>
<script src="/lib/jqyery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jqyery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

@{
    if (Model.troubleTicket != null && Model.troubleTicket.Feedback != null)
    {
        <h1>Results</h1>
        <p>@Model.troubleTicket.Feedback</p>
    }

    if (Model.troubleTicket is null == false)
    {
        <h1>Results</h1>
        <p>@Model.troubleTicket.Item</p>
    }
}