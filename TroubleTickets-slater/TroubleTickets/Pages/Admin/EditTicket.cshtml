@page
@model TroubleTickets.Pages.Admin.EditTicketModel
@{
    ViewData["Title"] = "Edit Ticket";
}

<h1>Edit Order</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="ticket.Item"></label>
        <input asp-for="ticket.Item" type="text" class="form-control" placeholder="Item Name" />
        <span asp-validation-for="ticket.Item" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ticket.Ingrediants"></label>
        <input asp-for="ticket.Ingrediants" type="text" class="form-control" placeholder="Ingrediants" />
        <span asp-validation-for="ticket.Ingrediants" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ticket.Notes"></label>
        <input asp-for="ticket.Notes" type="text" class="form-control" placeholder="Notes" />
        <span asp-validation-for="ticket.Notes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ticket.PlacedAt"></label>
        <input asp-for="ticket.PlacedAt" type="text" class="form-control" placeholder="Order placed at" />
        <span asp-validation-for="ticket.PlacedAt" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ticket.Fulfilled"></label>
        <select asp-for="ticket.Fulfilled" class="form-control">
            <option value="">select value</option>
            <option value="false">Closed</option>
            <option value="true">Active</option>
        </select>
        <span asp-validation-for="ticket.Fulfilled" class="text-danger"></span>
    </div>
    <input asp-for="ticket.Id" type="hidden" class="form-control" />
    <button type="submit" class="btn btn-primary">Update</button>
</form>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validation.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/dist/jquery.validation.unobtrusive.min.js"></script>

@{
    if (Model.ticket != null && Model.ticket.Feedback != null)
    {
        <h1>Results</h1>
        <p>@Model.ticket.Feedback</p>
    }
}