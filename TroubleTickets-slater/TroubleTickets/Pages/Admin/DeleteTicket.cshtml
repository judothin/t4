@page
@model TroubleTickets.Pages.Admin.DeleteTicketModel
@{
    ViewData["Title"] = "Delete Ticket";
}

<h1>Delete Ticket</h1>

<h2>Delete</h2>
<h3>Are you sure you want to delete this ticket?</h3>
<div>
    <h4>Employee</h4>
    <hr />
    <d1 class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ticket.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ticket.Category)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ticket.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ticket.CreatedAt)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ticket.ReporterEmail)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ticket.ResponderEmail)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ticket.Notes)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ticket.ClosedAt)
        </dd>
    </d1>

    <form method="post">
        <input type="hidden" asp-for="ticket.Id" />
        <input type="submit" value="Delete" class="btn btn-default" />
        <a asp-asp-page="/Admin/ControlPanel">Back To List</a>
    </form>
</div>